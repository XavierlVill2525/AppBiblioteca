<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/header') %>
    <title>Biblioteca Privada</title>
  </head>

  <body>
    <%- include('partials/navigation') %>

    <div class="container p-4">
      <div class="row">
        <%if (books.length> 0) {%> <% books.forEach(function(book) { %>
        <div class="col-md-4">
          <div class="card bg-dark">
            <div
              class="card-header text-white d-flex justify-content-between align-items-center"
            >
              <h4><%= book.title %></h4>
              <h6><%= book.author %></h6>
              <a href="/delete/<%= book.id %>" class="btn btn-danger btn-sm">
                Delete
              </a>
            </div>
            <img class="card-img-top" src="<%= book.image %>" />
            <div class="card-body text-light"><%= book.description %></div>
          </div>
        </div>
        <%})%> <%} else {%>
        <div class="card card-body text-center">
          <p>No Books yet. <a href="/new-entry">AÃ±adir</a></p>
        </div>
        <%}%>
      </div>
    </div>
  </body>
</html>
